		//One-To-One unidirectional 
		EntityManagerFactory emf=Persistence.createEntityManagerFactory("dev");
		EntityManager em = emf.createEntityManager();
		EntityTransaction et = em.getTransaction();
		
		Aadhaar a = new Aadhaar();
		
		a.setId(101);
		a.setLocation("China");
		
		Person p = new Person();
		p.setId(102);
		p.setName("Raju");
		p.setAadhaar(a);
		
		et.begin();
		em.persist(p);
		em.persist(a);
		et.commit();
		
	}
